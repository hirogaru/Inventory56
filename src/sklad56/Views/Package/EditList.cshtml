@model IList<sklad56.Models.Package>

@{
    ViewBag.Title = "EditList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-10 top-menu">
        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li><a href="@Url.Action("Index", "Home")">Главная</a></li>
                <li class="active"><a href="@Url.Action("Editor", "Home")">Редактирование</a></li>
                <li><a href="@Url.Action("Movements", "Home")">Операции</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("пользователи", "UserEditList", "User")</li>
            <li>@Html.ActionLink("предметы", "EquipEditList", "Equip")</li>
            <li class="active">@Html.ActionLink("комплекты", "EditList", "Package")</li>
        </ul>
    </div>
    <div class="col-sm-7 content">
        <div class="pull-right">
            <p>&nbsp;</p>
            <p><a href="@Url.Action("Register", "Package")" class="btn btn-sm btn-primary">новый комплект</a></p>
        </div>

        <h3>Список комплектов</h3>

        <table class="table table-striped table-condensed">
            @foreach (var pack in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("PackageList", "Package", new { PackID = pack.ID_Pack })">@pack.Name</a>
                    </td>
                    <td class="text-right">
                        <span class="label label-info">...</span>
                        <span class="label label-warning">&nbsp;x&nbsp;</span>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
