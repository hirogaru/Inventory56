@model IList<sklad56.Models.Place>

@{
    ViewBag.Title = "Список комплектов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-10 top-menu">
        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li><a href="@Url.Action("Index", "Home")">Главная</a></li>
                <li class="active"><a href="@Url.Action("Editor", "Home")">Редактирование</a></li>
                <li><a href="@Url.Action("Movements", "Home")">Операции</a></li>
            </ul>
        </div>
    </div>
    <div class="col-sm-2 sidebar">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("пользователи", "UserEditList", "User")</li>
            <li>@Html.ActionLink("предметы", "EquipEditList", "Equip")</li>
            <li>@Html.ActionLink("комплекты", "EditList", "Package")</li>
            <li class="active">@Html.ActionLink("места", "EditPlaceList", "Package")</li>
        </ul>
    </div>
    <div class="col-sm-7 content">
        <div class="pull-right">
            <p>&nbsp;</p>
            <p><a href="@Url.Action("RegisterPlace", "Package")" class="btn btn-sm btn-primary">новое место</a></p>
        </div>

        <h3>Список мест</h3>

        <table class="table table-striped table-condensed">
            @foreach (var place in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("PlaceList", "Package", new { PlaceID = place.ID_Place })">@place.Name</a>
                    </td>
                    <td class="text-right">
                        <span class="label label-info"><a href="@Url.Action("EditPlace", "Package", new { PlaceID = place.ID_Place })">...</a></span>
                        <span class="label label-warning"><a href="@Url.Action("DeletePlace", "Package", new { PlaceID = place.ID_Place, returnUrl = Request.Url.PathAndQuery })" onclick="return confirm('Удаляем место\nВы уверены?')">&nbsp;x&nbsp;</a></span>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
